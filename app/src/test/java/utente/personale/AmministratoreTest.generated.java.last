package utente.personale;

import static org.junit.Assert.*;
import org.junit.Test;

public class AmministratoreTest {
    /*
     * Tests for setDepartment method
     */

    @Test
    public void testSetDepartment() {
        // Setup
        String name = "John";
        String surname = "Doe";
        String department = "IT";
        Amministratore amministratore = new Amministratore(name, surname, department);

        // Test 1: setDepartment with valid input
        String newDepartment = "Marketing";
        assertEquals("Expected department to be updated", newDepartment, amministratore.setDepartment(newDepartment));
        assertEquals("Expected name to remain unchanged", name, amministratore.getName());
        assertEquals("Expected surname to remain unchanged", surname, amministratore.getSurname());

        // Test 2: setDepartment with null input
        newDepartment = null;
        assertNull("Expected department to be updated", amministratore.setDepartment(newDepartment));
        assertEquals("Expected name to remain unchanged", name, amministratore.getName());
        assertEquals("Expected surname to remain unchanged", surname, amministratore.getSurname());

        // Test 3: setDepartment with empty input
        newDepartment = "";
        assertNull("Expected department to be updated", amministratore.setDepartment(newDepartment));
        assertEquals("Expected name to remain unchanged", name, amministratore.getName());
        assertEquals("Expected surname to remain unchanged", surname, amministratore.getSurname());
    }
}
